# ===============================
# PostKaro Backend — Environment
# ===============================
# Copy this file to .env and fill in your real values.
# NEVER commit the real .env file to version control.

PORT=5000

# ── MongoDB ────────────────────────────────────────────────────────────────────
# Atlas (production + local Atlas): mongodb+srv://user:pass@cluster.mongodb.net/dbname
MONGO_URI=mongodb+srv://your_user:your_password@cluster0.xxxxx.mongodb.net/postkaro?appName=Cluster0
# Legacy local fallback (only used if MONGO_URI is not set)
# MONGODB_URI=mongodb://127.0.0.1:27017/pinterest
SESSION_SECRET=CHANGE_ME_random_session_secret
JWT_SECRET=CHANGE_ME_random_jwt_secret

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ── Frontend URL ──────────────────────────────────────────────────────────────
# Development:
CLIENT_URL=http://localhost:5173
# Production (Vercel) — comma-separate multiple domains if needed:
# CLIENT_URL=https://your-app.vercel.app,https://www.your-app.vercel.app

# Email — password-reset (Gmail App Password)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

NODE_ENV=development
# Production: NODE_ENV=production

# ── Unsplash API (get from https://unsplash.com/developers) ──────────────────
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# ── Pexels API (get from https://www.pexels.com/api/) ────────────────────────
# Used by GET /api/pexels/photos and GET /api/pexels/videos
# The key is NEVER sent to the frontend — all requests are proxied here.
PEXELS_API_KEY=your_pexels_api_key_here
