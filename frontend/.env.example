# ================================
# PostKaro Frontend — Environment
# ================================
# Copy this file to .env and fill in your real values.
# These VITE_ prefixed vars are injected at BUILD TIME — do NOT put secrets here.

# ── Backend API base URL ──────────────────────────────────────────────────────
# Development:   http://localhost:5000/api
#   (or leave it empty — vite.config.js proxies /api → localhost:5000)
# Production:    Your Render backend URL — MUST be changed for Vercel deployment!
#   e.g.  VITE_API_URL=https://postkaro-backend.onrender.com/api
VITE_API_URL=http://localhost:5000/api

# ── Socket / static-file base URL ────────────────────────────────────────────
# Used to prefix relative image/avatar paths from the backend.
# Development:   http://localhost:5000
# Production:    https://postkaro-backend.onrender.com
VITE_SOCKET_URL=http://localhost:5000

VITE_APP_NAME=PostKaro
