<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Follow Requests - PostKaro</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .requests-container {
            max-width: 600px;
            margin: 80px auto 0;
            padding: 20px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        .requests-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .requests-header h1 {
            font-size: 28px;
            margin-bottom: 8px;
            color: #111;
        }

        .requests-header p {
            color: #767676;
            font-size: 16px;
        }

        .request-item {
            display: flex;
            align-items: center;
            padding: 16px 0;
            border-bottom: 1px solid #e1e1e1;
        }

        .request-item:last-child {
            border-bottom: none;
        }

        .request-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 16px;
        }

        .request-info {
            flex: 1;
        }

        .request-name {
            font-weight: 600;
            font-size: 16px;
            margin-bottom: 2px;
        }

        .request-username {
            color: #767676;
            font-size: 14px;
        }

        .request-actions {
            display: flex;
            gap: 8px;
        }

        .accept-btn, .decline-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 20px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .accept-btn {
            background: #e60023;
            color: white;
        }

        .decline-btn {
            background: #efefef;
            color: #111;
        }

        .accept-btn:hover {
            background: #d50429;
        }

        .decline-btn:hover {
            background: #ddd;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #767676;
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 16px;
            color: #ddd;
        }

        .back-btn {
            background: #efefef;
            color: #111;
            padding: 8px 16px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 24px;
            transition: all 0.2s ease;
        }

        .back-btn:hover {
            background: #ddd;
        }
    </style>
</head>
<body>
    <!-- Simple Navbar -->
    <nav class="navbar">
        <div class="navbar-logo">
            <a href="/"><i class="fab fa-pinterest"></i> PostKaro</a>
        </div>
        <ul class="navbar-actions">
            <li><a href="/profile"><i class="fas fa-user"></i></a></li>
            <li><a href="/conversations"><i class="fas fa-envelope"></i></a></li>
            <li><a href="/logout"><i class="fas fa-sign-out-alt"></i></a></li>
        </ul>
    </nav>

    <div class="requests-container">
        <a href="/profile" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Profile
        </a>

        <div class="requests-header">
            <h1>Follow Requests</h1>
            <p>People who want to follow you</p>
        </div>

        <div id="requestsList">
            <% if (requests && requests.length > 0) { %>
                <% requests.forEach(function(request) { %>
                    <div class="request-item" data-user-id="<%= request._id %>">
                        <img src="<%= request.dp || '/images/default-avatar.png' %>" alt="<%= request.username %>" class="request-avatar">
                        
                        <div class="request-info">
                            <div class="request-name"><%= request.fullname %></div>
                            <div class="request-username">@<%= request.username %></div>
                        </div>
                        
                        <div class="request-actions">
                            <button class="accept-btn" onclick="handleRequest('<%= request._id %>', 'accept')">
                                <i class="fas fa-check"></i> Accept
                            </button>
                            <button class="decline-btn" onclick="handleRequest('<%= request._id %>', 'decline')">
                                <i class="fas fa-times"></i> Decline
                            </button>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-users"></i>
                    <h3>No follow requests</h3>
                    <p>When someone requests to follow you, they'll appear here.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        async function handleRequest(userId, action) {
            try {
                const endpoint = action === 'accept' ? 'accept-request' : 'decline-request';
                const response = await fetch(`/follow/${endpoint}/${userId}`, {
                    method: 'POST'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Remove the request item from the UI
                    const requestItem = document.querySelector(`[data-user-id="${userId}"]`);
                    if (requestItem) {
                        requestItem.style.animation = 'slideOut 0.3s ease-out';
                        setTimeout(() => {
                            requestItem.remove();
                            
                            // Check if this was the last request
                            const remainingRequests = document.querySelectorAll('.request-item');
                            if (remainingRequests.length === 0) {
                                document.getElementById('requestsList').innerHTML = `
                                    <div class="empty-state">
                                        <i class="fas fa-users"></i>
                                        <h3>No follow requests</h3>
                                        <p>When someone requests to follow you, they'll appear here.</p>
                                    </div>
                                `;
                            }
                        }, 300);
                    }
                    
                    showToast(data.message, 'success');
                } else {
                    showToast(data.message, 'error');
                }
            } catch (error) {
                console.error('Error handling request:', error);
                showToast('Something went wrong. Please try again.', 'error');
            }
        }

        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            toast.textContent = message;
            
            const style = document.createElement('style');
            style.textContent = `
                .toast {
                    position: fixed;
                    bottom: 20px;
                    right: 20px;
                    padding: 12px 24px;
                    border-radius: 8px;
                    color: white;
                    font-weight: 500;
                    z-index: 10000;
                    animation: slideUp 0.3s ease-out;
                }
                .toast-success { background: #10b981; }
                .toast-error { background: #ef4444; }
                @keyframes slideUp {
                    from { transform: translateY(100%); opacity: 0; }
                    to { transform: translateY(0); opacity: 1; }
                }
                @keyframes slideOut {
                    from { transform: translateX(0); opacity: 1; }
                    to { transform: translateX(100%); opacity: 0; }
                }
            `;
            
            if (!document.querySelector('style[data-toast]')) {
                style.setAttribute('data-toast', 'true');
                document.head.appendChild(style);
            }
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideUp 0.3s ease-out reverse';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
    </script>
</body>
</html>