<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages - Pinterest</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --pinterest-red: #e60023;
      --pinterest-dark-red: #bd081c;
      --pinterest-ivory: #f7f5f3;
      --pinterest-cream: #faf9f7;
      --pinterest-black: #111111;
      --pinterest-grey: #767676;
      --pinterest-light-grey: #e9e9e9;
      --pinterest-white: #ffffff;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background: linear-gradient(135deg, var(--pinterest-ivory) 0%, var(--pinterest-cream) 100%);
      color: var(--pinterest-black);
      min-height: 100vh;
    }

    /* Pinterest-Style Navbar */
    .navbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 16px;
      background: var(--pinterest-white);
      border-bottom: 1px solid var(--pinterest-light-grey);
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 8px rgba(230, 0, 35, 0.1);
    }

    .navbar-logo a {
      text-decoration: none;
      font-size: 20px;
      font-weight: bold;
      color: var(--pinterest-red);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .navbar-search {
      position: relative;
      flex: 1;
      max-width: 400px;
      margin: 0 20px;
    }

    .navbar-search input {
      width: 100%;
      padding: 12px 16px;
      border: none;
      border-radius: 24px;
      background: var(--pinterest-ivory);
      font-size: 14px;
      transition: all 0.2s ease;
    }

    .navbar-search input:focus {
      outline: none;
      background: var(--pinterest-white);
      box-shadow: 0 0 0 3px rgba(230, 0, 35, 0.1);
    }

    .navbar-icons {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .nav-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--pinterest-black);
      text-decoration: none;
      border-radius: 50%;
      transition: all 0.2s ease;
      position: relative;
    }

    .nav-icon:hover {
      background: var(--pinterest-ivory);
      transform: scale(1.05);
    }

    .notification-badge {
      position: absolute;
      top: -2px;
      right: -2px;
      background: var(--pinterest-red);
      color: var(--pinterest-white);
      border-radius: 50%;
      min-width: 18px;
      height: 18px;
      font-size: 11px;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid var(--pinterest-white);
    }

    /* Main Container */
    .main-container {
      max-width: 500px;
      margin: 20px auto;
      background: var(--pinterest-white);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(230, 0, 35, 0.1);
      border: 1px solid var(--pinterest-light-grey);
    }

    /* Chat Header */
    .chat-header {
      background: linear-gradient(135deg, var(--pinterest-red) 0%, var(--pinterest-dark-red) 100%);
      color: var(--pinterest-white);
      padding: 20px 24px;
      text-align: center;
      position: relative;
    }

    .chat-header h1 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 8px;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .chat-header p {
      font-size: 14px;
      opacity: 0.9;
      font-weight: 400;
    }

    /* Conversations List */
    .conversations-list {
      background: var(--pinterest-cream);
      max-height: 70vh;
      overflow-y: auto;
    }

    .conversations-list::-webkit-scrollbar {
      width: 6px;
    }

    .conversations-list::-webkit-scrollbar-track {
      background: var(--pinterest-light-grey);
    }

    .conversations-list::-webkit-scrollbar-thumb {
      background: var(--pinterest-red);
      border-radius: 3px;
    }

    /* Conversation Item */
    .conversation-item {
      display: flex;
      align-items: center;
      gap: 16px;
      padding: 16px 24px;
      text-decoration: none;
      color: var(--pinterest-black);
      border-bottom: 1px solid var(--pinterest-light-grey);
      transition: all 0.2s ease;
      position: relative;
    }

    .conversation-item:hover {
      background: var(--pinterest-white);
      transform: translateX(4px);
    }

    .conversation-item:last-child {
      border-bottom: none;
    }

    .user-avatar {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid var(--pinterest-white);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      position: relative;
    }

    /* Avatar Initials Styling for Conversations */
    .user-avatar.avatar-initials {
      background: linear-gradient(135deg, var(--pinterest-red) 0%, var(--pinterest-dark-red) 100%);
      color: var(--pinterest-white);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 24px;
      text-transform: uppercase;
      border: 3px solid var(--pinterest-white);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    /* Emoji Avatar Styling for Conversations */
    .user-avatar.avatar-emoji {
      background: linear-gradient(135deg, var(--pinterest-red) 0%, var(--pinterest-dark-red) 100%);
      color: var(--pinterest-white);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 28px;
      border: 3px solid var(--pinterest-white);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .online-indicator {
      width: 16px;
      height: 16px;
      background: #4CAF50;
      border: 3px solid var(--pinterest-white);
      border-radius: 50%;
      position: absolute;
      bottom: 2px;
      right: 2px;
    }

    .user-info {
      flex: 1;
      min-width: 0;
    }

    .user-name {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 4px;
      color: var(--pinterest-black);
    }

    .last-message {
      font-size: 14px;
      color: var(--pinterest-grey);
      margin-bottom: 4px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .message-time {
      font-size: 12px;
      color: var(--pinterest-grey);
      opacity: 0.8;
    }

    .message-meta {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 8px;
    }

    .unread-badge {
      background: var(--pinterest-red);
      color: var(--pinterest-white);
      border-radius: 50%;
      min-width: 24px;
      height: 24px;
      font-size: 12px;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { 
        transform: scale(1);
        opacity: 1;
      }
      50% { 
        transform: scale(1.1);
        opacity: 0.8;
      }
    }

    .message-count {
      font-size: 12px;
      color: var(--pinterest-grey);
      font-weight: 500;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 60px 24px;
      color: var(--pinterest-grey);
    }

    .empty-state i {
      font-size: 64px;
      color: var(--pinterest-red);
      margin-bottom: 16px;
      opacity: 0.6;
    }

    .empty-state h3 {
      font-size: 20px;
      margin-bottom: 8px;
      color: var(--pinterest-black);
    }

    .empty-state p {
      font-size: 14px;
      max-width: 300px;
      margin: 0 auto;
      line-height: 1.5;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .main-container {
        margin: 10px;
        border-radius: 16px;
      }
      
      .navbar {
        padding: 10px 16px;
      }
      
      .navbar-search {
        max-width: 200px;
        margin: 0 10px;
      }
      
      .conversation-item {
        padding: 12px 16px;
      }
      
      .user-avatar {
        width: 48px;
        height: 48px;
      }
    }

    @media (max-width: 480px) {
      .main-container {
        margin: 5px;
        border-radius: 12px;
      }
      
      .navbar-search {
        display: none;
      }
      
      .user-avatar {
        width: 44px;
        height: 44px;
      }
      
      .conversation-item {
        padding: 10px 12px;
        gap: 12px;
      }
    }
  </style>
</head>
<body>
  <!-- Pinterest-Style Navbar -->
  <nav class="navbar">
    <div class="navbar-logo">
      <a href="/feed">
        <i class="fab fa-pinterest"></i>
        <span>Pinterest</span>
      </a>
    </div>
    
    <div class="navbar-search">
      <input type="text" placeholder="Search conversations..." id="searchInput">
    </div>
    
    <div class="navbar-icons">
      <a href="/feed" class="nav-icon" title="Home">
        <i class="fas fa-home"></i>
      </a>
      <a href="/explore" class="nav-icon" title="Explore">
        <i class="fas fa-compass"></i>
      </a>
      <a href="/conversations" class="nav-icon" title="Messages">
        <i class="fas fa-comment"></i>
        <span class="notification-badge hidden" id="messageBadge">0</span>
      </a>
      <a href="/notifications" class="nav-icon" title="Notifications">
        <i class="fas fa-bell"></i>
        <span class="notification-badge hidden" id="notificationBadge">0</span>
      </a>
      <a href="/profile" class="nav-icon" title="Profile">
        <i class="fas fa-user"></i>
      </a>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="main-container">
    <!-- Chat Header -->
    <div class="chat-header">
      <h1><i class="fas fa-comments"></i> Messages</h1>
      <p>Connect with your friends and community</p>
    </div>

    <!-- Conversations List -->
    <div class="conversations-list">
      <% if (conversations && conversations.length > 0) { %>
        <% conversations.forEach(function(conversation) { %>
          <a href="/chat/<%= conversation.otherUser._id %>" class="conversation-item">
            <div style="position: relative;">
              <% if (conversation.otherUser.dp && conversation.otherUser.dp !== '/images/default-avatar.png' && conversation.otherUser.dp !== '/images/default-avatar.svg' && conversation.otherUser.dp.length > 10) { %>
                <img src="<%= conversation.otherUser.dp %>" 
                     alt="<%= conversation.otherUser.username %>" 
                     class="user-avatar"
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                <div class="user-avatar avatar-emoji" style="display: none;">
                  ðŸ‘¤
                </div>
              <% } else { %>
                <div class="user-avatar avatar-emoji">
                  ðŸ‘¤
                </div>
              <% } %>
              <div class="online-indicator"></div>
            </div>
            
            <div class="user-info">
              <div class="user-name">
                <%= conversation.otherUser.fullname || conversation.otherUser.username %>
              </div>
              <div class="last-message">
                <%= conversation.lastMessage.text.length > 50 ? 
                    conversation.lastMessage.text.substring(0, 50) + '...' : 
                    conversation.lastMessage.text %>
              </div>
              <div class="message-time">
                <%= Math.floor((Date.now() - new Date(conversation.lastMessage.createdAt).getTime()) / (1000 * 60)) < 60 ?
                    Math.floor((Date.now() - new Date(conversation.lastMessage.createdAt).getTime()) / (1000 * 60)) + 'm' :
                    Math.floor((Date.now() - new Date(conversation.lastMessage.createdAt).getTime()) / (1000 * 60 * 60)) < 24 ?
                    Math.floor((Date.now() - new Date(conversation.lastMessage.createdAt).getTime()) / (1000 * 60 * 60)) + 'h' :
                    Math.floor((Date.now() - new Date(conversation.lastMessage.createdAt).getTime()) / (1000 * 60 * 60 * 24)) + 'd' %>
              </div>
            </div>
            
            <div class="message-meta">
              <% if (conversation.unreadCount > 0) { %>
                <div class="unread-badge">
                  <%= conversation.unreadCount > 99 ? '99+' : conversation.unreadCount %>
                </div>
              <% } %>
              <div class="message-count">
                <%= conversation.totalMessages %> message<%= conversation.totalMessages !== 1 ? 's' : '' %>
              </div>
            </div>
          </a>
        <% }); %>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-comments"></i>
          <h3>No conversations yet</h3>
          <p>Start a conversation with someone by visiting their profile and clicking the message button.</p>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    // Update notification counts
    async function updateNotificationCounts() {
      try {
        const response = await fetch('/notification-counts');
        const data = await response.json();
        
        const notificationBadge = document.getElementById('notificationBadge');
        const messageBadge = document.getElementById('messageBadge');
        
        if (notificationBadge && data.notifications > 0) {
          notificationBadge.textContent = data.notifications > 99 ? '99+' : data.notifications.toString();
          notificationBadge.classList.remove('hidden');
        } else if (notificationBadge) {
          notificationBadge.classList.add('hidden');
        }
        
        if (messageBadge && data.messages > 0) {
          messageBadge.textContent = data.messages > 99 ? '99+' : data.messages.toString();
          messageBadge.classList.remove('hidden');
        } else if (messageBadge) {
          messageBadge.classList.add('hidden');
        }
        
      } catch (error) {
        console.error('Error fetching notification counts:', error);
      }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      updateNotificationCounts();
      setInterval(updateNotificationCounts, 30000);
      
      // Search functionality
      const searchInput = document.getElementById('searchInput');
      const conversationItems = document.querySelectorAll('.conversation-item');
      
      if (searchInput) {
        searchInput.addEventListener('input', function() {
          const searchTerm = this.value.toLowerCase();
          
          conversationItems.forEach(item => {
            const userName = item.querySelector('.user-name').textContent.toLowerCase();
            const lastMessage = item.querySelector('.last-message').textContent.toLowerCase();
            
            if (userName.includes(searchTerm) || lastMessage.includes(searchTerm)) {
              item.style.display = 'flex';
            } else {
              item.style.display = 'none';
            }
          });
        });
      }
    });

    // Add subtle animation to conversation items
    document.addEventListener('DOMContentLoaded', function() {
      const items = document.querySelectorAll('.conversation-item');
      items.forEach((item, index) => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        item.style.animation = `fadeInUp 0.5s ease forwards ${index * 0.1}s`;
      });
    });

    // Add fadeInUp animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .hidden {
        display: none !important;
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>