<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find People - PostKaro</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .search-container {
            max-width: 800px;
            margin: 80px auto 0;
            padding: 20px;
        }

        .search-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .search-header h1 {
            font-size: 32px;
            margin-bottom: 8px;
            color: #111;
        }

        .search-header p {
            color: #767676;
            font-size: 16px;
        }

        .search-box {
            margin-bottom: 32px;
        }

        .search-input {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid #e1e1e1;
            border-radius: 24px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.2s ease;
        }

        .search-input:focus {
            border-color: #e60023;
        }

        .user-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 24px;
        }

        .user-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.2s ease;
        }

        .user-card:hover {
            transform: translateY(-4px);
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin: 0 auto 16px;
            display: block;
        }

        .user-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .user-username {
            color: #767676;
            margin-bottom: 8px;
        }

        .user-stats {
            color: #767676;
            font-size: 14px;
            margin-bottom: 16px;
        }

        .user-actions {
            display: flex;
            gap: 8px;
            justify-content: center;
        }

        .follow-user-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 20px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .follow-user-btn.follow {
            background: #e60023;
            color: white;
        }

        .follow-user-btn.following {
            background: #111;
            color: white;
        }

        .follow-user-btn.requested {
            background: #fbbf24;
            color: #111;
        }

        .view-profile-btn {
            background: #efefef;
            color: #111;
            padding: 8px 16px;
            border: none;
            border-radius: 20px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #767676;
        }

        .no-results {
            text-align: center;
            padding: 60px 20px;
            color: #767676;
        }

        .no-results i {
            font-size: 48px;
            margin-bottom: 16px;
            color: #ddd;
        }
    </style>
</head>
<body>
    <!-- Simple Navbar -->
    <nav class="navbar">
        <div class="navbar-logo">
            <a href="/"><i class="fab fa-pinterest"></i> PostKaro</a>
        </div>
        <ul class="navbar-types">
            <li><a href="/">Home</a></li>
            <li><a href="/feed">Feed</a></li>
            <li><a href="/explore">Explore</a></li>
            <li><a href="/find-people" class="active">Find People</a></li>
        </ul>
        <ul class="navbar-actions">
            <li><a href="/profile"><i class="fas fa-user"></i></a></li>
            <li><a href="/conversations"><i class="fas fa-envelope"></i></a></li>
            <li><a href="/logout"><i class="fas fa-sign-out-alt"></i></a></li>
        </ul>
    </nav>

    <div class="search-container">
        <div class="search-header">
            <h1>Find People to Follow</h1>
            <p>Discover amazing creators and connect with friends</p>
        </div>

        <div class="search-box">
            <input type="text" id="searchInput" class="search-input" placeholder="Search for people..." autocomplete="off">
        </div>

        <div id="resultsContainer">
            <div class="no-results">
                <i class="fas fa-search"></i>
                <h3>Start searching</h3>
                <p>Enter a name or username to find people to follow</p>
            </div>
        </div>
    </div>

    <script>
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const resultsContainer = document.getElementById('resultsContainer');

        searchInput.addEventListener('input', function() {
            const query = this.value.trim();
            clearTimeout(searchTimeout);

            if (query.length === 0) {
                resultsContainer.innerHTML = `
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <h3>Start searching</h3>
                        <p>Enter a name or username to find people to follow</p>
                    </div>
                `;
                return;
            }

            if (query.length < 2) return;

            resultsContainer.innerHTML = `
                <div class="loading">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Searching...</p>
                </div>
            `;

            searchTimeout = setTimeout(async () => {
                try {
                    const response = await fetch(`/follow/search?q=${encodeURIComponent(query)}`);
                    const data = await response.json();

                    if (data.success && data.users.length > 0) {
                        displayUsers(data.users);
                    } else {
                        resultsContainer.innerHTML = `
                            <div class="no-results">
                                <i class="fas fa-user-slash"></i>
                                <h3>No users found</h3>
                                <p>Try searching with a different term</p>
                            </div>
                        `;
                    }
                } catch (error) {
                    console.error('Search error:', error);
                    resultsContainer.innerHTML = `
                        <div class="no-results">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>Search error</h3>
                            <p>Something went wrong. Please try again.</p>
                        </div>
                    `;
                }
            }, 500);
        });

        function displayUsers(users) {
            const userGrid = document.createElement('div');
            userGrid.className = 'user-grid';

            users.forEach(user => {
                const userCard = document.createElement('div');
                userCard.className = 'user-card';
                userCard.innerHTML = `
                    <img src="${user.dp || '/images/default-avatar.png'}" alt="${user.username}" class="user-avatar">
                    <div class="user-name">${user.fullname}</div>
                    <div class="user-username">@${user.username}</div>
                    <div class="user-stats">${user.followersCount} followers â€¢ ${user.followingCount} following</div>
                    <div class="user-actions">
                        <button class="follow-user-btn ${user.followStatus}" data-user-id="${user._id}" data-action="${getActionFromStatus(user.followStatus)}">
                            ${getButtonText(user.followStatus)}
                        </button>
                        <a href="/profile/${user._id}" class="view-profile-btn">View Profile</a>
                    </div>
                `;

                const followBtn = userCard.querySelector('.follow-user-btn');
                followBtn.addEventListener('click', () => handleFollow(user._id, followBtn));

                userGrid.appendChild(userCard);
            });

            resultsContainer.innerHTML = '';
            resultsContainer.appendChild(userGrid);
        }

        function getActionFromStatus(status) {
            const actions = {
                'not_following': 'follow',
                'following': 'unfollow',
                'requested': 'cancel-request'
            };
            return actions[status] || 'follow';
        }

        function getButtonText(status) {
            const texts = {
                'not_following': '<i class="fas fa-user-plus"></i> Follow',
                'following': '<i class="fas fa-user-check"></i> Following',
                'requested': '<i class="fas fa-clock"></i> Requested'
            };
            return texts[status] || '<i class="fas fa-user-plus"></i> Follow';
        }

        async function handleFollow(userId, button) {
            const action = button.dataset.action;
            
            try {
                let response;
                if (action === 'follow') {
                    response = await fetch(`/follow/follow/${userId}`, { method: 'POST' });
                } else {
                    response = await fetch(`/follow/unfollow/${userId}`, { method: 'POST' });
                }
                
                const data = await response.json();
                
                if (data.success) {
                    updateButtonStatus(button, data.status);
                    showToast(data.message);
                } else {
                    showToast(data.message, 'error');
                }
            } catch (error) {
                console.error('Follow error:', error);
                showToast('Something went wrong. Please try again.', 'error');
            }
        }

        function updateButtonStatus(button, status) {
            button.className = `follow-user-btn ${status}`;
            button.dataset.action = getActionFromStatus(status);
            button.innerHTML = getButtonText(status);
        }

        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            toast.textContent = message;
            
            const style = document.createElement('style');
            style.textContent = `
                .toast {
                    position: fixed;
                    bottom: 20px;
                    right: 20px;
                    padding: 12px 24px;
                    border-radius: 8px;
                    color: white;
                    font-weight: 500;
                    z-index: 10000;
                    animation: slideUp 0.3s ease-out;
                }
                .toast-success { background: #10b981; }
                .toast-error { background: #ef4444; }
                @keyframes slideUp {
                    from { transform: translateY(100%); opacity: 0; }
                    to { transform: translateY(0); opacity: 1; }
                }
            `;
            
            if (!document.querySelector('style[data-toast]')) {
                style.setAttribute('data-toast', 'true');
                document.head.appendChild(style);
            }
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideUp 0.3s ease-out reverse';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
    </script>
</body>
</html>